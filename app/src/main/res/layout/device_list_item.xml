<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/card_white"
    android:elevation="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/deviceNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#212121"
        android:textSize="20sp"
        tools:text="Home" />

    <TextView
        android:id="@+id/numSensorsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deviceNameText"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/colorPrimary"
        android:textSize="64sp"
        tools:text="3" />

    <TextView
        android:id="@+id/sensorsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deviceNameText"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/numSensorsText"
        android:text="Sensors"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/numUnlockedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensorsText"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/numSensorsText"
        android:text="3 Unlocked"
        android:background="#11009900"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/numLockedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numUnlockedText"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/numSensorsText"
        android:text="3 Unlocked"
        android:background="#11990000"
        android:textSize="14sp" />

</RelativeLayout>